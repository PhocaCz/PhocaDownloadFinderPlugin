<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="finder" method="upgrade" version="3.9">
	<name>plg_finder_phocadownload</name>
	<author>Jan Pavelka (www.phoca.cz)</author>
	<creationDate>22/10/2020</creationDate>
	<authorEmail></authorEmail>
	<authorUrl>https://www.phoca.cz</authorUrl>
	<copyright>Jan Pavelka</copyright>
	<license>GNU/GPL</license>
	<version>3.2.1</version>
	<description>PLG_FINDER_PHOCADOWNLOAD_DESCRIPTION</description>
	<projectName>PhocaDownloadFinderPlugin</projectName>

	<files>
		<filename plugin="phocadownload">index.html</filename>
		<filename plugin="phocadownload">phocadownload.php</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_finder_phocadownload.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_finder_phocadownload.sys.ini</language>
	</languages>

	<administration>
		<languages>
			<language tag="en-GB">language/en-GB/en-GB.plg_finder_phocadownload.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.plg_finder_phocadownload.sys.ini</language>
		</languages>
	</administration>
	
	<config>
	<fields name="params">
		<fieldset name="basic">
		<field name="search_link" type="list" default="0" label="PLG_FINDER_PHOCADOWNLOAD_SEARCH_LINK_LABEL" description="PLG_FINDER_PHOCADOWNLOAD_SEARCH_LINK_DESC">
			<option value="0">PLG_FINDER_PHOCADOWNLOAD_CATEGORY_VIEW</option>
			<option value="1">PLG_FINDER_PHOCADOWNLOAD_FILE_VIEW</option>
			<option value="2">PLG_FINDER_PHOCADOWNLOAD_DIRECT_DOWNLOAD</option>
		</field>
		</fieldset>
	</fields>
	</config>

	<updateservers>
		<server type="extension" name="PLG_FINDER_PHOCADOWNLOAD" priority="1"><![CDATA[https://raw.githubusercontent.com/PhocaCz/PhocaDownloadFinderPlugin/master/manifest.xml]]></server>
	</updateservers>
</extension>
